<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pagination_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/opensrp_primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/tool_bar_image"
            android:layout_height="@dimen/tool_bar_image"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dialog_toolbar_close_margin"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_action_close" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/customFontTextViewTitle"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/close"
            android:text="@string/record_vaccinations"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/activity_title_size" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_vt_container"
        android:layout_below="@id/detail_toolbar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/vaccines_given_title_question"
                style="@style/CustomFontTextViewStyle.ClientList.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/btn_margin_left"
                android:layout_marginTop="30dp"
                android:text="@string/which_vaccines_given_text"
                android:textColor="@color/text_black"
                android:textSize="@dimen/px_16_to_sp" />

            <include
                android:id="@+id/checkbox_no_vaccination"
                layout="@layout/custom_vaccine_name_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vaccines_given_title_question"
                android:layout_marginHorizontal="@dimen/btn_margin_left" />


            <LinearLayout
                android:id="@+id/vaccination_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkbox_no_vaccination"
                android:layout_marginHorizontal="@dimen/btn_margin_left"
                android:orientation="vertical" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/add_date_separately"
                style="@style/CustomFontTextViewStyle.ClientList.Medium"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@id/vaccination_name_layout"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="@dimen/px_16_to_sp"
                android:visibility="visible" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/select_date_mode_label"
                style="@style/CustomFontTextViewStyle.ClientList.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vaccination_name_layout"
                android:layout_marginHorizontal="@dimen/btn_margin_left"
                android:layout_marginTop="16dp"
                android:text="@string/choose_date_mode"
                android:textColor="@color/text_black"
                android:textSize="@dimen/px_16_to_sp" />

            <RadioGroup
                android:id="@+id/select_date_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/select_date_mode_label"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingEnd="24dp">

                <RadioButton
                    android:id="@+id/shared_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:checked="true"
                    android:padding="4dp"
                    android:text="@string/shared_date"
                    android:textSize="@dimen/px_16_to_sp" />

                <RadioButton
                    android:id="@+id/each_its_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:checked="false"
                    android:padding="4dp"
                    android:text="@string/each_vaccine_its_date"
                    android:textSize="@dimen/px_16_to_sp"
                    android:value="2" />
            </RadioGroup>


            <LinearLayout
                android:id="@+id/multiple_vaccine_date_pickerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/select_date_mode"
                android:layout_marginHorizontal="@dimen/btn_margin_left"
                android:orientation="vertical">

                <include layout="@layout/custom_single_vaccine_view" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/single_vaccine_add_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/multiple_vaccine_date_pickerview"
                android:layout_marginHorizontal="@dimen/btn_margin_left"
                android:orientation="vertical"
                android:visibility="gone" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/why_no_vaccine"
                style="@style/CustomFontTextViewStyle.ClientList.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/single_vaccine_add_layout"
                android:layout_marginTop="8dp"
                android:maxLines="15"
                android:padding="8dp"
                android:singleLine="false"
                android:text="@string/why_no_vaccine"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/reasons_no_vaccines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/why_no_vaccine"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/congratulate_has_all_vaccine"
                style="@style/CustomFontTextViewStyle.ClientList.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reasons_no_vaccines"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:background="@color/toaster_note_green"
                android:maxLines="15"
                android:padding="8dp"
                android:singleLine="false"
                android:text="@string/congratulate_vaccine_uptodate"
                android:textColor="@color/graduate_green"
                android:textSize="@dimen/px_16_to_sp"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/view_vt_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:id="@+id/view_vt"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey" />

        <Button
            android:id="@+id/save_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/btn_margin_left"
            android:layout_marginBottom="@dimen/btn_margin_right"
            android:background="@drawable/vaccination_today_bg"
            android:paddingTop="@dimen/btn_padding_top"
            android:paddingBottom="@dimen/btn_padding_bottom"
            android:text="@string/save"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size" />
    </LinearLayout>
</RelativeLayout>